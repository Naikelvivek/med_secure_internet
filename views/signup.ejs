<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Sign Up - MedSecure</title>
    <link rel="stylesheet" href="/public/styles.css">
  </head>
  <body>
    <div class="layout">
      <div class="hero">
        <div class="hero-inner">
          <img src="/public/illustration.svg" alt="illustration" class="illustration">
        </div>
      </div>
      <div class="panel">
        <div class="panel-card">
          <img src="/public/logo.svg" class="logo" alt="logo">
          <h3>Create Account</h3>
          <p class="sub">Sign up if your email exists in staff records</p>
          <% if (message) { %>
            <div class="msg"><%= message %></div>
          <% } %>
          <form method="POST" action="/signup" class="form">
            <div class="field">
              <input name="email" type="email" placeholder="Email (staff)" required />
            </div>
            <div class="field">
              <input name="password" type="password" placeholder="Password" required />
            </div>
            <div class="field">
              <input name="confirm" type="password" placeholder="Confirm Password" required />
            </div>
            <button class="primary" type="submit">SIGN UP</button>
          </form>
          <div class="foot-links">
            <a href="/">Back to login</a>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
